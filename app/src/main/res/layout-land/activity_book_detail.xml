<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@android:color/darker_gray">

  <TextView
      android:id="@+id/textViewTitleDetails"
      android:layout_width="270dp"
      android:layout_height="50dp"
      android:layout_below="@id/textViewRanking"
      android:layout_alignParentEnd="true"
      android:layout_marginTop="0dp"
      android:layout_marginEnd="74dp"
      android:gravity="center|center_horizontal"
      android:textColor="#FFFFFF"
      android:textSize="20sp" />

  <TextView
      android:id="@+id/textViewRanking"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/imageView11"
      android:layout_alignParentEnd="true"
      android:layout_marginTop="25dp"
      android:layout_marginEnd="140dp"
      android:textColor="#FFFFFF"
      android:textSize="20sp" />

  <TextView
      android:id="@+id/textViewAuthorDetails"
      android:layout_width="268dp"
      android:layout_height="50dp"
      android:layout_below="@id/textViewTitleDetails"
      android:layout_alignParentEnd="true"
      android:layout_marginTop="-2dp"
      android:layout_marginEnd="74dp"
      android:gravity="center|center_horizontal"
      android:textColor="#FFFFFF"
      android:textSize="20sp" />

  <TextView
      android:id="@+id/textViewDescriptionDetails"
      android:layout_width="360dp"
      android:layout_height="wrap_content"
      android:layout_below="@id/textViewAuthorDetails"
      android:layout_alignParentEnd="true"
      android:layout_marginTop="9dp"
      android:layout_marginEnd="33dp"
      android:gravity="center|center_horizontal"
      android:textColor="#FFFFFF"
      android:textSize="16sp" />

  <TextView
      android:id="@+id/textViewAmazonUrlDetails"
      android:layout_width="360dp"
      android:layout_height="wrap_content"
      android:layout_below="@id/textViewDescriptionDetails"
      android:layout_alignParentEnd="true"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="33dp"
      android:gravity="center"
      android:textColor="#FFFFFF"
      android:textSize="14sp" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="wrap_content"
      android:layout_height="267dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="-149dp"
      android:layout_marginTop="47dp"
      android:layout_marginEnd="235dp"
      app:srcCompat="@drawable/img" />

  <ImageView
      android:id="@+id/imageViewDetails"
      android:layout_width="199dp"
      android:layout_height="228dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="75dp"
      android:layout_marginTop="65dp"
      android:layout_marginEnd="456dp"
      android:scaleType="fitXY"
      android:src="@drawable/ic_launcher_background" />

  <Button
      android:id="@+id/saveToListButton"
      android:layout_width="203dp"
      android:layout_height="59dp"
      android:layout_below="@+id/imageView2"
      android:layout_marginTop="18dp"
      android:layout_marginEnd="40dp"
      android:layout_toStartOf="@+id/deleteFromSavedBooksButton"
      android:onClick="onSaveToListButtonClick"
      android:text="@string/savetolist" />

  <Button
      android:id="@+id/backToListButton"
      android:layout_width="203dp"
      android:layout_height="59dp"
      android:layout_below="@+id/imageView2"

      android:layout_alignParentStart="true"

      android:layout_marginStart="41dp"
      android:layout_marginTop="18dp"
      android:layout_marginEnd="42dp"
      android:layout_toStartOf="@+id/saveToListButton"
      android:onClick="onBackButtonClick"
      android:text="@string/backtolist" />

  <Button
      android:id="@+id/deleteFromSavedBooksButton"
      android:layout_width="203dp"
      android:layout_height="59dp"
      android:layout_below="@+id/imageView2"
      android:layout_alignParentEnd="true"
      android:layout_marginTop="18dp"
      android:layout_marginEnd="39dp"
      android:onClick="onDeleteFromSavedBooksClick"
      android:text="@string/deletefromlist" />

  <ImageView
      android:id="@+id/imageView11"
      android:layout_width="match_parent"
      android:layout_height="47dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="0dp"
      android:layout_marginTop="0dp"
      android:layout_marginEnd="0dp"
      app:srcCompat="@drawable/nytlogo" />


</RelativeLayout>